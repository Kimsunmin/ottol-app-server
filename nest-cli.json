{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "builder": {
      "type": "swc",
      "options": {
        "swcrcPath": "./.swcrc"
      }
    },
    "deleteOutDir": true,
    "assets": [
      {
        "include": "../resources/*.yaml",
        "outDir": "./dist/resources/."
      }
    ]
  }
}
